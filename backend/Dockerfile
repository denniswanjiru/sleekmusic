FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./

RUN npm cache clean --force
RUN npm install
COPY . .
RUN npm run build

FROM node:18-alpine AS server
WORKDIR /app
COPY package*.json ./
RUN npm install --production
COPY --from=builder ./app/build ./build
EXPOSE 1337
CMD ["npm", "start"]